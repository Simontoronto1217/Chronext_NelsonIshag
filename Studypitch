    <!-- INTERACTIVITY SCRIPT -->
    <script>
        // --- 1. SCROLL SPY ---
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                    // Update dots
                    document.querySelectorAll('.nav-dot').forEach(dot => {
                        dot.classList.remove('active');
                        if(dot.dataset.target === entry.target.id) {
                            dot.classList.add('active');
                        }
                    });
                }
            });
        }, { threshold: 0.25 });

        document.querySelectorAll('section').forEach((section) => {
            observer.observe(section);
        });

        // --- 2. HERO CHART (Chart.js) ---
        // Custom styling to match Chronext Gold/Dark theme
        const ctx = document.getElementById('heroChart').getContext('2d');
        const gradient = ctx.createLinearGradient(0, 0, 0, 400);
        gradient.addColorStop(0, 'rgba(198, 168, 124, 0.2)'); // Gold
        gradient.addColorStop(1, 'rgba(198, 168, 124, 0)');

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Q1', 'Q2', 'Q3', 'Q4', 'Q1', 'Q2'],
                datasets: [{
                    label: 'Human Capital Value',
                    data: [100, 102, 115, 125, 138, 145],
                    borderColor: '#C6A87C',
                    backgroundColor: gradient,
                    borderWidth: 2,
                    pointBackgroundColor: '#0F1216',
                    pointBorderColor: '#C6A87C',
                    pointBorderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    x: { display: false },
                    y: { display: false }
                }
            }
        });

        // --- 3. VALUATION CALCULATOR ---
        function updateValuation() {
            // Get Values
            const salary = parseInt(document.getElementById('input-salary').value);
            const fee = parseInt(document.getElementById('input-fee').value);
            const time = parseInt(document.getElementById('input-time').value);

            // Update UI Labels
            document.getElementById('display-salary').innerText = salary.toLocaleString('de-DE') + ' €';
            document.getElementById('display-fee').innerText = fee + ' %';
            document.getElementById('display-time').innerText = time + ' Months';

            // Calculate Loss
            // 1. Headhunter Cost
            const recruitingCost = salary * (fee / 100);
            
            // 2. Productivity Loss
            // Assumption: An employee costs ~1.2x salary (Lohnnebenkosten).
            // During vacancy/ramp-up, we lose value. 
            // Simple model: Monthly Cost * Months * 0.7 (Efficiency Loss Factor)
            const monthlyCost = (salary * 1.2) / 12;
            const productivityLoss = monthlyCost * time * 0.7;

            const totalLoss = recruitingCost + productivityLoss;
            const invest = 14400; // Fixed FOM cost approx

            // Update Outputs
            document.getElementById('output-replacement').innerText = Math.round(totalLoss).toLocaleString('de-DE') + ' €';
            
            // Factor
            const factor = (totalLoss / invest).toFixed(1);
            document.getElementById('output-factor').innerText = factor + 'x';

            // Update Bars
            // Scale to whichever is larger (usually loss)
            const maxVal = Math.max(totalLoss, invest) * 1.1;
            const lossPct = (totalLoss / maxVal) * 100;
            const investPct = (invest / maxVal) * 100;

            document.getElementById('bar-loss').style.width = lossPct + '%';
            document.getElementById('bar-invest').style.width = investPct + '%';
        }

        // Init
        updateValuation();
        lucide.createIcons();

    </script>
</body>
</html>
